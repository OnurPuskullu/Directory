@using Directory.MODEL.Entities;
@model Person


<h3 class="text-center">Personel Güncelleme Sayfası</h3>
<form method="post" asp-controller="Person" asp-action="Edit" >
    <div class="mb-3">
        <label class="form-label" asp-for="FirstName">İsim</label>
        <input type="text" class="form-control" asp-for="FirstName" />
    </div>
    <div class="mb-3">
        <label class="form-label" asp-for="LastName">Soyisim</label>
        <input type="text" class="form-control" asp-for="LastName" />
    </div>
    <div class="mb-3">
        <label class="form-label" asp-for="PhoneNumber">Telefon Numarası</label>
        <input type="text" class="form-control" asp-for="PhoneNumber" />
    </div>
    <div class="mb-3">
        <label class="form-label" asp-for="Company">Şirket</label>
        <input type="text" class="form-control" asp-for="Company" />
    </div>
    <button type="submit" class="btn btn-primary">Güncelle</button>
</form>