@using Directory.MODEL.Entities;
@model List<Person>

<h3 class="text-center">Personel Listeleme Sayfası</h3>
<a asp-controller="Person" asp-action="Create"  class="btn btn-primary" style="float:right">Yeni Ekle</a>
<table class="table table-striped">
    <thead>
        <tr>
            <th>#</th>
            <th>FirstName</th>
            <th>LastName</th>
            <th>PhoneNumber</th>
            <th>Company</th>

        </tr>
    </thead>
    <tbody>
        @for (int i = 0; i < Model.Count; i++)
        {
            <tr>
                <th>@(i + 1)</th>
                <th>@Model[i].FirstName</th>
                <th>@Model[i].LastName</th>
                <th>@Model[i].PhoneNumber</th>
                <th>@Model[i].Company</th>
                <th>
                    <a class="big-icon" asp-controller="Person" asp-action="Edit" ><i class="bi bi-pencil-square"></i></a>
                    <a class="big-icon margin-icon" asp-controller="Person" asp-action="Delete"><i class="bi bi-x-circle-fill"></i></a>
                </th>
            </tr>
        }
    </tbody>
</table>

